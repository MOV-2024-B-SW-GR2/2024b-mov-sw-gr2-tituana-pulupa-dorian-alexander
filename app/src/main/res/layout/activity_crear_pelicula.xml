<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPelicula">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="102dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        android:text="Crear peliculas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_plataformaEscogida"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_tituloPelicula"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:hint="Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plataformaEscogida" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_generoPelicula"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="128dp"
        android:hint="Genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plataformaEscogida" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_duracionPelicula"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="208dp"
        android:hint="Duracion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plataformaEscogida" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_fechaEstPelicula"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="284dp"
        android:hint="Fecha de Estreno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plataformaEscogida" />

    <Button
        android:id="@+id/btn_agre_pel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Agregar Pelicula"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switch_popularidad"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:text="Es popular"
        app:layout_constraintBottom_toTopOf="@+id/btn_agre_pel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_fechaEstPelicula"
        app:layout_constraintVertical_bias="0.526" />
</androidx.constraintlayout.widget.ConstraintLayout>