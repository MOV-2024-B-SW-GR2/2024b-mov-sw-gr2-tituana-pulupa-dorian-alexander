<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Crear_tarea">

    <Button
        android:id="@+id/btn_crear_tarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2b2a28 "
        android:textSize="18dp"
        android:backgroundTint="#c5bca8"
        android:text="Registrar tarea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha_tarea_crear"
        app:layout_constraintVertical_bias="0.539" />

    <TextView
        android:textColor="#2b2a28 "
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Ingrese su tarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_fecha_tarea_crear"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:hint="Fecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_materia_tarea_crear" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_descripcion_tarea_crear"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="96dp"
        android:hint="Descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_materia_tarea_crear"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:hint="Materia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_descripcion_tarea_crear" />

</androidx.constraintlayout.widget.ConstraintLayout>